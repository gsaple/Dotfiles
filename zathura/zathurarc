set selection-notification false
set selection-clipboard clipboard
set page-padding 5

# inverse colour
set recolor-lightcolor "#282828" # background
set recolor-darkcolor "#d4be98" # foreground

set guioptions ""
set statusbar-fg "#abb2bf"
set statusbar-bg "#282c34"
set statusbar-basename true

#first-page-column a:b:c, related to the option 'pages-per-row'
#if there is 1 page per row, the first page will be on the the a_th column;
#if there are 2 pages per row, the first page will be on the b_th column;
#if there are >=3 pages per row, the first page will be on the c_th column.
map o set "first-page-column 1:1"
map t set "first-page-column 1:2"
map w adjust_window width
map W adjust_window best-fit
unmap a
map s toggle_statusbar

set highlight-color "#e06c75"
set highlight-fg "#282828"
set highlight-active-color "#528bff"
set highlight-transparency 0.8

set index-fg "#d4be98"
set index-bg "#272e33"
set index-active-fg "#e06c75"
set index-active-bg "#2c3338"
set sandbox none
